@model Learn2Code.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}
<h2>Tạo Người dùng</h2>
<hr />
<div class="form-group">
    <label class="sr-only" for="keyword">Tìm theo tên loại</label>
    <div class="">
        <div class="input-group input-group-outline">
            <label class="form-label">Nhập tên bạn muốn tìm...</label>
            <input class="form-control" name="name" id="keyword" style="height:42px" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>
<hr />
<h4>Quản lý Người dùng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="UserName" class="control-label form-label"></label>
                    <input asp-for="UserName" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="PassWord" class="control-label form-label"></label>
                    <input asp-for="PassWord" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="Email" class="control-label form-label"></label>
                    <input asp-for="Email" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <input asp-for="Avatar" type="file" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
     

            <div class="input-group input-group-static mb-4">
                <label asp-for="Idrole" class="control-label"></label>
                <select asp-for="Idrole" class="form-control" asp-items="ViewBag.Idrole"></select>
            </div>


            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label class="custom-control-label" for="customCheck1">Trạng thái</label>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="Contact" class="control-label form-label"></label>
                    <input asp-for="Contact"  class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="form-group">
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
