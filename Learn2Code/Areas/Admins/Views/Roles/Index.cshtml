@model IEnumerable<Learn2Code.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý Phân Quyền</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create</a>
</p>

<div class="form-group">
    <label class="sr-only" for="keyword">Tìm theo tên loại</label>
    <div class="">
        <div class="input-group input-group-outline">
            <label class="form-label">Nhập tên bạn muốn tìm...</label>
            <input class="form-control" name="name" id="keyword" style="height:42px" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>

<table class="table align-items-center mb-0">
    <thead>
        <tr>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.FirstOrDefault().Idrole)</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Html.DisplayNameFor(model => model.FirstOrDefault().NameRole)</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
            <th class="text-secondary opacity-7"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Idrole)</p>
                </td>
                <td>
                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.NameRole)</p> 
                </td>
                <td>
                    <p class="text-xs font-weight-bold mb-0"> @Html.DisplayFor(modelItem => item.Description)</p>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idrole" class="btn btn-primary btn-action mr-1" data-toggle="tooltip" title="" data-original-title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Idrole" class="btn btn-info btn-action mr-1" data-toggle="tooltip" title="" data-original-title="Edit">
                        <i class="fas fa-clipboard-list"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Idrole" class="btn btn-danger btn-action" data-toggle="tooltip" title="" data-confirm="Are You Sure?|This action can not be undone. Do you want to continue?" data-confirm-yes="alert('Deleted')" data-original-title="Delete">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>