@model Learn2Code.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tạo Phân quyền</h2>
<hr />
<div class="form-group">
    <label class="sr-only" for="keyword">Tìm theo tên loại</label>
    <div class="">
        <div class="input-group input-group-outline">
            <label class="form-label">Nhập tên bạn muốn tìm...</label>
            <input class="form-control" name="name" id="keyword" style="height:42px" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>
<hr />
<h4>Quản lý phân quyền</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="Idrole" class="control-label form-label"></label>
                    <input asp-for="Idrole" class="form-control form-control-lg" />
                </div>
              
                <span asp-validation-for="Idrole" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="NameRole" class="control-label form-label"></label>
                    <input asp-for="NameRole" class="form-control form-control-lg" />
                </div>
                    <span asp-validation-for="NameRole" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg input-group-outline my-3">
                    <label asp-for="Description" class="control-label form-label"></label>
                    <input asp-for="Description" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="form-group">
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
