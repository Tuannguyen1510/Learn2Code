@{
    ViewData["Title"] = "Home Page";
}

<section class="search" style="background-color:#282a35">
    <div class="search-bar">
        <h1 class="">Learn to Code</h1>
        <h2 class="">Cung cấp kiến thức cơ bản về lập trình.</h2>
        <div class="bar-input">
            <input class="outline-none ml-2 mr-2 hover:not-italic font-bold w-96 h-11"
                   type="search"
                   placeholder="Tìm kiếm khóa học, ví dụ: HTML" />
            <div class="input-outline">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </div>
        <h3 class="bar-outline mt-5 mb-5 text-white w-full">
            Gợi ý khóa học
        </h3>
    </div>
</section>
<svg style="background-color: #d9eee1; margin-bottom: -8px"
     width="100%"
     height="80"
     viewBox="0 0 100 100"
     preserveAspectRatio="none">
    <path id="wavepath"
          d="M0,0  L110,0C35,150 35,0 0,100z"
          fill="#282A35"></path>
</svg>
<section class="lang">
    <div class="lang-grid">
    </div>
</section>
<section class="langtag"></section>
<section class="score">
    <div class="score-containner">
        <div class="containner-header">
            <h2>Tiến trình học</h2>
            <p>Giúp bạn theo dõi quá trình học tập với hệ thống đánh giá bằng điểm số.</p>
            <p>Hãy đăng nhập và bắt đầu tích điểm!</p>
        </div>
        <img src ="./layout_home/img/myl-green-off.png" />
        <button>Đăng ký miễn phí</button>
    </div>
</section>
<section class="excercise">
    <div class="excercise-flex">
        <div class="flex-header">
            <h2>Khóa học và bài tập</h2>
            <p>Nơi bạn học và ứng dụng</p>
        </div>
        <div class="flex-body">
            <div class="body-box ex-background">Khóa học</div>
            <div class="body-box qui-background">Bài luyện tập</div>
        </div>
    </div>
</section>
